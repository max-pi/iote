<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_locate">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a beacon"
        android:id="@+id/addBeaconButton"
        android:layout_above="@+id/locateFaqButton"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue_button_text_color"
        android:background="@drawable/button_shape"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"

        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help? Read our FAQ"
        android:id="@+id/locateFaqButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light_gray"
        android:background="@android:color/transparent"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locateMyBeaconsListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addBeaconButton"
        android:layout_marginBottom="8dp"

        android:choiceMode="singleChoice" />


</RelativeLayout>



